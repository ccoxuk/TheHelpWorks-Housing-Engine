  "actions": [
    {
      "id": "contact_streetlink_outreach",
      "name": "Contact StreetLink for Outreach Support",
      "description": "Alert StreetLink about rough sleeper to trigger outreach team visit",
      "type": "immediate",
      "category": "emergency",
      "urgency": "critical",
      "steps": [
        {
          "order": 1,
          "instruction": "Call StreetLink on 0300 500 0914 (available 24/7)"
        },
        {
          "order": 2,
          "instruction": "Or use the StreetLink website or app to report location",
          "requiresInput": false
        },
        {
          "order": 3,
          "instruction": "Provide exact location details (nearest landmark, street name)"
        },
        {
          "order": 4,
          "instruction": "Outreach team will aim to visit within 24 hours"
        }
      ],
      "contactInfo": {
        "phone": "0300 500 0914",
        "website": "https://www.streetlink.org.uk",
        "hoursOfOperation": "24/7"
      },
      "estimatedDuration": "5-10 minutes to report, outreach within 24 hours",
      "relatedServices": ["streetlink_london"],
      "metadata": {
        "tags": ["outreach", "rough-sleeping", "immediate"]
      }
    },
    {
      "id": "emergency_accommodation_assessment",
      "name": "Emergency Accommodation Assessment",
      "description": "Apply for emergency accommodation under Section 188 duty",
      "type": "application",
      "category": "housing",
      "urgency": "critical",
      "steps": [
        {
          "order": 1,
          "instruction": "Contact the local authority housing department immediately"
        },
        {
          "order": 2,
          "instruction": "Explain that you are homeless tonight and have priority need"
        },
        {
          "order": 3,
          "instruction": "Request emergency accommodation under Section 188",
          "requiresInput": true,
          "inputFields": [
            {
              "name": "localAuthority",
              "label": "Which local authority are you applying to?",
              "type": "text",
              "required": true
            }
          ]
        },
        {
          "order": 4,
          "instruction": "Provide proof of identity if available (but lack of ID should not prevent assessment)"
        },
        {
          "order": 5,
          "instruction": "Answer questions about your circumstances honestly"
        }
      ],
      "requiredInformation": [
        "Current location",
        "Reason for homelessness",
        "Any children or dependents",
        "Any vulnerabilities"
      ],
      "estimatedDuration": "2-4 hours for initial assessment",
      "documentation": {
        "guidance": "The council has a legal duty to provide interim accommodation while they assess your case if you appear to be homeless, eligible, and in priority need."
      },
      "outcomes": [
        {
          "id": "accommodation_provided",
          "description": "Emergency accommodation provided",
          "nextActions": ["full_homelessness_assessment"]
        },
        {
          "id": "accommodation_refused",
          "description": "Emergency accommodation refused",
          "nextActions": ["legal_advice_referral", "complaint_process"]
        }
      ],
      "metadata": {
        "tags": ["emergency", "section188", "assessment", "local-authority"]
      }
    },
