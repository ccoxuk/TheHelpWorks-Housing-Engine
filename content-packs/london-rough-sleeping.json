  "rules": [
    {
      "id": "section_188_emergency_duty",
      "name": "Section 188 Emergency Accommodation Duty",
      "description": "Council duty to provide interim accommodation if applicant may be homeless, eligible, and in priority need",
      "jurisdiction": "England/Wales",
      "legalBasis": "Housing Act 1996 Section 188",
      "priority": 100,
      "conditions": {
        "type": "all",
        "rules": [
          {
            "field": "situation.homelessTonight",
            "operator": "equals",
            "value": true
          },
          {
            "field": "legal.rightToReside",
            "operator": "equals",
            "value": true
          }
        ],
        "nested": [
          {
            "type": "any",
            "rules": [
              {
                "field": "user.hasChildren",
                "operator": "equals",
                "value": true
              },
              {
                "field": "user.isPregnant",
                "operator": "equals",
                "value": true
              },
              {
                "field": "user.age",
                "operator": "lessThan",
                "value": 18
              },
              {
                "field": "situation.atRiskOfViolence",
                "operator": "equals",
                "value": true
              }
            ]
          }
        ]
      },
      "actions": [
        "emergency_accommodation_assessment",
        "contact_local_authority_emergency"
      ],
      "metadata": {
        "version": "1.0.0",
        "effectiveDate": "1996-01-01",
        "author": "U-HSP Legal Team",
        "tags": ["emergency", "section188", "priority-need", "interim-accommodation"]
      }
    },
