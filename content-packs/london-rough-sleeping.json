  "legalReferences": [
    {
      "id": "housing_act_1996_s188",
      "name": "Housing Act 1996 Section 188",
      "citation": "Housing Act 1996, Section 188",
      "url": "https://www.legislation.gov.uk/ukpga/1996/52/section/188",
      "summary": "Interim duty to accommodate in case of apparent priority need. Local authorities must provide interim accommodation if they have reason to believe an applicant may be homeless, eligible for assistance, and have a priority need."
    },
    {
      "id": "homelessness_reduction_act_2017",
      "name": "Homelessness Reduction Act 2017",
      "citation": "Homelessness Reduction Act 2017",
      "url": "https://www.legislation.gov.uk/ukpga/2017/13/contents/enacted",
      "summary": "Places duties on local authorities to prevent and relieve homelessness for all eligible applicants, not just those in priority need. Includes requirements for personalized housing plans and early intervention."
    }
